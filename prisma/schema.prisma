generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  characters      CharacterSheet[] // Um usu치rio pode ter v치rias fichas de personagem
}

model CharacterSheet {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  name       String
  race       String
  class      String
  level      Int      @default(1)
  experience Int      @default(0)
  // Atributos b치sicos
  strength       Int @default(10)
  dexterity      Int @default(10)
  constitution   Int @default(10)
  intelligence   Int @default(10)
  wisdom         Int @default(10)
  charisma       Int @default(10)
  // Pontos de vida e mana
  maxHealth  Int @default(100)
  currentHealth Int @default(100)
  maxMana    Int @default(50)
  currentMana Int @default(50)
  // Outros atributos
  armorClass Int @default(10)
  speed      Int @default(30)
  // Relacionamento com o usu치rio
  user       User    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
